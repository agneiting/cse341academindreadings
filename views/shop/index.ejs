<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/slideshow.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <h1 class="centered">Welcome to our Shop!</h1>
        <h2 class="centered">Featured Products</h2><br/>
        
        <div class="slideshow">
            <% if (prods.length > 0) { %>
                <% for (let product of prods) { if (product.featured == "Yes") {%>
                    <a href="/products/<%= product._id %>">   
                        <img class="mySlides" src="<%= product.imageUrl %>" alt="<%= product.title %>">
                    </a>
                    <% } %>    
                <% } %>
            <% } else { %>
                <h1>No Products Found!</h1>
            <% } %>


            <button class="btn ssbtnl" onclick="plusDivs(-1)">&#10094;</button>
            <button class="btn ssbtnr" onclick="plusDivs(+1)">&#10095;</button>
        </div>

        
    </main>
<%- include('../includes/end.ejs') %>